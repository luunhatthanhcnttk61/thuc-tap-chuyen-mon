@model aspnet_mvc_real_estate.Models.collection

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Collection", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="admin-form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.collections_id)
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.collections_name, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.EditorFor(model => model.collections_name, new { htmlAttributes = new { @class = "form-control w75" } })
                @Html.ValidationMessageFor(model => model.collections_name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.overview, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.TextAreaFor(model => model.overview, new { @class = "form-control", rows = '5' })
                @Html.ValidationMessageFor(model => model.overview, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.video, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.EditorFor(model => model.video, new { htmlAttributes = new { @class = "form-control w75" } })
                @Html.ValidationMessageFor(model => model.video, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.introduction, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.TextAreaFor(model => model.introduction, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.introduction, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            CKEDITOR.replace("introduction");
        </script>
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.information, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.TextAreaFor(model => model.information, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.information, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            CKEDITOR.replace("information");
        </script>
        <div class="admin-form-item">
            <div class="admin-form-label">
                @Html.LabelFor(model => model.location, htmlAttributes: new { @class = "form-control-label" })
            </div>
            <div class="form-group admin-form-input">
                @Html.TextAreaFor(model => model.location, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
            </div>
        </div>
        <script>
            CKEDITOR.replace("location");
        </script>
        <div class="admin-form-submit">
            <input type="submit" value="Chỉnh sửa" class="btn btn-primary" />  @Html.ActionLink("Quay lại", "Index", "Collection", new { @class = "btn btn-primary btn-outline" })
        </div>
    </div>
}
