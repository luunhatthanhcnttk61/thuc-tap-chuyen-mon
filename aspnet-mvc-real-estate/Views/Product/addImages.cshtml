@model aspnet_mvc_real_estate.Models.products_galery
@{
    ViewBag.Title = "Thêm ảnh vào thư viện";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<div class="container">
    <p>Chọn hình ảnh</p>
    @using (Html.BeginForm("addImages", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.EditorFor(model => model.img, new { htmlAttributes = new { type = "file", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Tải ảnh lên" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
